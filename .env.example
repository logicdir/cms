# Application
APP_NAME="LogicDir CMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=logicdir_cms
DB_USERNAME=root
DB_PASSWORD=

# Cache & Session
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# SEO Module
SEO_SITE_NAME="LogicDir CMS"
SEO_DEFAULT_DESCRIPTION="A high-performance, modular Content Management System"
SEO_DEFAULT_OG_IMAGE=

# AdSense Module
ADSENSE_PUBLISHER_ID=
ADSENSE_AUTO_ADS=false

# Performance
RESPONSE_CACHE_TTL=3600
RESPONSE_CACHE_ENABLED=true

# Media
MEDIA_DISK=public
MEDIA_MAX_SIZE=10240
MEDIA_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,pdf,doc,docx

# Security
SECURITY_AUDIT_ENABLED=true
SECURITY_RATE_LIMIT=60
